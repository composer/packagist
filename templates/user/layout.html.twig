{% extends 'layout.html.twig' %}

{% block content %}
{% if app.user is null %}
    <section class="row">
        {{ block('user_content') }}
    </section>
{% else %}
    <h2 class="title">
        {{ app.user.username }}
    </h2>

    <section class="row">
        <div class="col-md-3">
            {{ knp_menu_render('profile_menu', {'currentClass': 'active', 'allow_safe_labels': true}) }}
        </div>

        {{ block('user_content') }}
    </section>
{% endif %}
{% endblock %}
