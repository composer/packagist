# This file is for unifying the coding style for different IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = true
indent_size = 4

[{*.css,*.less,*.js}]
indent_size = 4

[{*.json,*.yml,*.yaml}]
indent_size = 4

[composer.json]
indent_size = 4
